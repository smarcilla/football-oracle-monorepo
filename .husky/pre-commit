
echo "Running pre-commit checks..."

# pre-requisitos
echo "Building internal packages..."
pnpm --filter "./packages/**" build || exit 1

echo "Generating Prisma Client..."
pnpm --filter "@football-oracle/data-registry" prisma:generate || exit 1

# Lint
echo "Checking lint..."
pnpm lint || exit 1

# Typecheck
echo "Checking types..."
pnpm typecheck || exit 1

echo "Pre-commit checks passed!"

