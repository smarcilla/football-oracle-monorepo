{
  "name": "football-oracle",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "down": "docker-compose down",
    "lint": "pnpm run lint:js && pnpm run lint:python",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:python": "ruff check services/scraper",
    "lint:python:fix": "ruff check services/scraper --fix",
    "format": "prettier --write . && ruff format services/scraper",
    "sonar": "sonar-scanner -Dsonar.token=${SONAR_TOKEN}"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "sonarqube-scanner": "^4.3.4",
    "typescript-eslint": "^8.53.1"
  }
}
